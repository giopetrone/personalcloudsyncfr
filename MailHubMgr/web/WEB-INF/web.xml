<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <servlet>
        <servlet-name>Callback</servlet-name>
        <servlet-class>web.Callback</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SubscribeToServlet</servlet-name>
        <servlet-class>web.SubscribeToServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PublishMailEventsServlet</servlet-name>
        <servlet-class>web.PublishMailEventsServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EventCallback</servlet-name>
        <servlet-class>web.EventCallback</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SubscribeToServlet</servlet-name>
        <url-pattern>/SubscribeToServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PublishMailEventsServlet</servlet-name>
        <url-pattern>/PublishMailEventsServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Callback</servlet-name>
        <url-pattern>/Callback/subscribe/pippo</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EventCallback</servlet-name>
        <url-pattern>/EventCallback/subscribe/pippo</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
</web-app>
